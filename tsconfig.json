{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "strict": false,
    "preserveConstEnums": true,
    "paths": {
      "@*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"]
}
